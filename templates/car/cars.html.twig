{% extends "base.html.twig" %}

{% block title %}Liste des voitures{% endblock %}

{% block monTitre %}Listes des voitures{% endblock %}

{% block body %}
{% if admin %}
    <a href="{{ path('add_car') }}" class="col-2 btn btn-success my-3">Ajouter</a>
{% endif %}
{{form_start(form)}}
<div class="row  align-items-center text-center">
    <div class="col">
        {{form_row(form.minYear)}}
    </div>
    <div class="col">
        {{form_row(form.maxYear)}}
    </div>
    <div class="col-2">
        <button type="submit" class="btn btn-info">Filtrer</button>
    </div>
</div>
{{form_end(form)}}

{% for label,messages in app.flashes %}
    <div class="container">
        <div class="alert alert-{{label}}">
            {% for message in messages %}
                <p>{{ message }}</p>
            {% endfor %}
        </div>
    </div>
{% endfor %}

<div class="row no-guiters">
    {% for car in cars %}
        {% include "partials/_car.html.twig" %}
    {% endfor %}
    <div class="navigation mb-5">
    {{ knp_pagination_render(cars) }}
    </div>
</div>

{% endblock %}